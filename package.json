{
  "name": "angular-base",
  "version": "0.0.0",
  "scripts": {
    "start": "ng serve",
    "test": "pnpm run cleanup && pnpm run test:static && pnpm run test:unit && pnpm run build:app",
    "build": "pnpm run build:app",
    "watch": "ng build --watch --configuration development",
    "test:unit": "ng test --configuration=ci",
    "test:static": "pnpm run securityCheck && pnpm run eslintCheck && pnpm run prettierCheck",
    "watch:UT": "ng test --configuration=watch",
    "build:app": "ng build",
    "cleanup": "rimraf .angular/ coverage/ dist/",
    "securityCheck": "pnpm audit",
    "eslintCheck": "eslint \"src/**/*.ts\"",
    "prettierCheck": "prettier --check \"{src,public}/**/*.{ts,js,json,scss,html,md}\"",
    "bumpDependencies": "pnpm dlx npm-check-updates",
    "prepare": "husky",
    "lintStaged": "lint-staged"
  },
  "engines": {
    "node": ">=24.12.0 <25",
    "pnpm": ">=10.26.2"
  },
  "private": true,
  "packageManager": "pnpm@10.26.2",
  "dependencies": {
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/router": "^21.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.4",
    "@angular/cli": "^21.0.4",
    "@angular/compiler-cli": "^21.0.0",
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^4.0.8",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jsdom": "^27.1.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "rimraf": "^6.1.2",
    "typescript-eslint": "^8.50.1",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8"
  }
}
