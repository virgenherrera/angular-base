{
  "name": "angular-base",
  "version": "0.0.0",
  "scripts": {
    "start": "ng serve",
    "test": "pnpm run cleanup && pnpm run test:static && pnpm run test:unit && pnpm run build:app",
    "build": "pnpm run build:app",
    "watch": "ng build --watch --configuration development",
    "test:unit": "ng test --configuration=ci",
    "test:static": "pnpm run securityCheck && pnpm run eslintCheck && pnpm run prettierCheck",
    "watch:UT": "ng test --configuration=watch",
    "build:app": "ng build",
    "cleanup": "rimraf .angular/ coverage/ dist/",
    "securityCheck": "pnpm audit",
    "eslintCheck": "eslint \"src/**/*.ts\"",
    "prettierCheck": "prettier --check \"{src,public}/**/*.{ts,js,json,scss,html,md}\"",
    "prepare": "husky",
    "lintStaged": "lint-staged",
    "bumpDependencies": "pnpm dlx npm-check-updates"
  },
  "engines": {
    "node": ">=24.12.0 <25"
  },
  "packageManager": "pnpm@10.27.0",
  "private": true,
  "dependencies": {
    "@angular/common": "^21.0.6",
    "@angular/compiler": "^21.0.6",
    "@angular/core": "^21.0.6",
    "@angular/forms": "^21.0.6",
    "@angular/platform-browser": "^21.0.6",
    "@angular/router": "^21.0.6",
    "rxjs": "~7.8.2",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@angular/build": "^21.0.4",
    "@angular/cli": "^21.0.4",
    "@angular/compiler-cli": "^21.0.6",
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "rimraf": "^6.1.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.52.0",
    "vitest": "^4.0.16"
  },
  "pnpm": {
    "overrides": {
      "@modelcontextprotocol/sdk@<1.25.2": ">=1.25.2",
      "qs@<6.14.1": ">=6.14.1"
    }
  }
}
