{
  // For more information, visit: https://go.microsoft.com/fwlink/?LinkId=733558
  "version": "2.0.0",
  "tasks": [
    {
      "label": "pnpm: start",
      "type": "shell",
      "command": "pnpm start",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "Changes detected"
          },
          "endsPattern": {
            "regexp": "bundle generation (complete|failed)"
          }
        }
      }
    },
    {
      "label": "stop: pnpm start",
      "type": "shell",
      "command": "PORT=4200; PIDS=$(lsof -ti :$PORT); if [ -n \"$PIDS\" ]; then kill $PIDS; fi",
      "problemMatcher": []
    }
  ]
}
